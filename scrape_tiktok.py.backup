#!/usr/bin/env python3
import sys, json, io, time, os
from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.chrome.options import Options

sys.stdout = io.TextIOWrapper(sys.stdout.buffer, encoding='utf-8')

def clean_url(url):
    if url.startswith('//'):
        return 'https:' + url
    if not url.startswith('http'):
        return 'https://www.tiktok.com' + url
    return url

def create_driver():
    chrome_options = Options()
    chrome_options.add_argument("--headless=new")
    chrome_options.add_argument("--no-sandbox")
    chrome_options.add_argument("--disable-dev-shm-usage")
    chrome_options.add_argument("--disable-gpu")
    chrome_options.add_argument("--disable-dev-tools")
    chrome_options.add_argument("--disable-extensions")
    chrome_options.add_argument("--disable-plugins")
    chrome_options.add_argument("--disable-images")
    chrome_options.add_argument("--disable-javascript")
    chrome_options.add_argument("--window-size=1366,768")
    chrome_options.add_argument("--user-agent=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36")
    chrome_options.add_argument("--disable-blink-features=AutomationControlled")
    chrome_options.add_experimental_option("excludeSwitches", ["enable-automation"])
    chrome_options.add_experimental_option('useAutomationExtension', False)
    chrome_options.page_load_strategy = 'eager'
    
    return webdriver.Chrome(options=chrome_options)

def main():
    username = "pannonegyetem"
    
    print(f"Starting TikTok scraper for @{username}", flush=True)
    
    videos = []
    
    for attempt in range(2):
        driver = None
        try:
            print(f"Attempt {attempt + 1}/2", flush=True)
            driver = create_driver()
            
            driver.set_page_load_timeout(15)
            
            print("Loading TikTok page...", flush=True)
            driver.get(f"https://www.tiktok.com/@{username}")
            
            # Wait for page to load
            time.sleep(5)
            
            # Try to find videos
            links = []
            
            # Multiple selectors
            selectors = [
                'a[href*="/video/"]',
                '[data-e2e="user-post-item"] a',
                'a[href*="@"][href*="/video/"]'
            ]
            
            for selector in selectors:
                try:
                    elements = driver.find_elements(By.CSS_SELECTOR, selector)
                    if elements:
                        links = elements[:2]
                        print(f"Found {len(links)} links with selector: {selector}", flush=True)
                        break
                except:
                    continue
            
            if not links:
                # Scroll and try again
                driver.execute_script("window.scrollBy(0, 500);")
                time.sleep(2)
                links = driver.find_elements(By.CSS_SELECTOR, 'a[href*="/video/"]')[:2]
                print(f"Found {len(links)} links after scrolling", flush=True)
            
            # Process links
            for i, link in enumerate(links):
                try:
                    href = link.get_attribute("href")
                    if not href or "/video/" not in href:
                        continue
                    
                    title = ""
                    thumb = ""
                    
                    # Try to get title and thumbnail
                    try:
                        img = link.find_element(By.TAG_NAME, "img")
                        title = (img.get_attribute("alt") or img.get_attribute("aria-label") or "")[:200]
                        thumb = img.get_attribute("src") or ""
                    except:
                        try:
                            title_elem = link.find_element(By.CSS_SELECTOR, "span, div, p")
                            title = title_elem.text[:200]
                        except:
                            pass
                    
                    videos.append({
                        "title": title if title else "TikTok Video",
                        "url": clean_url(href),
                        "image_url": thumb
                    })
                    
                    print(f"Added video {i+1}: {href}", flush=True)
                    
                except Exception as e:
                    print(f"Error processing video {i}: {str(e)}", flush=True)
                    continue
            
            if videos:
                break  # Success!
            
        except Exception as e:
            print(f"Attempt {attempt + 1} failed: {str(e)}", flush=True)
        finally:
            if driver:
                try:
                    driver.quit()
                except:
                    pass
        
        time.sleep(2)
    
    # Return JSON result
    result = {
        'success': len(videos) > 0,
        'videos_found': len(videos),
        'videos': videos
    }
    
    print(json.dumps(result, ensure_ascii=False, indent=2))
    sys.stdout.flush()

if __name__ == "__main__":
    try:
        main()
    except Exception as e:
        print(json.dumps({
            'success': False,
            'error': str(e),
            'videos': []
        }))